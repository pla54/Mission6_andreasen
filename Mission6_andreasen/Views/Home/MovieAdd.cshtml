@{
}

@model Movie

<h1>What Movies Should I watch?</h1>

@*Form for creating and adding a movie to the database. Also is passed a viewbag for the categories to be selected*@
<form method="post">

    <input type="hidden" asp-for="MovieID" />

    <select asp-for="CategoryId">
        <option value="">Select a Category:</option>
        @foreach (Category c in ViewBag.Categories)
        {
            <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select>

    <br />

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" />

    <br />

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" />

    <br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" />

    <br />

    <label asp-for="Rating">What is the Rating?</label>
    <input asp-for="Rating"/>

    <br />

    <label asp-for="Edited">Is This Movie Edited?</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>

    <br />

    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" />

    <br />

    <label asp-for="CopiedToPlex">CopiedToPlex</label>
    <select asp-for="CopiedToPlex">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>

    <br />

    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" />

    <br />

    <button type="submit">Submit Movie</button>

    <div asp-validation-summary="All"></div>
</form>